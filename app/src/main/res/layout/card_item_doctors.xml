<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        card_view:contentPadding="3dp"
        card_view:cardCornerRadius="3dp"
        android:background="#1e88e5"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            >


            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/doctorPhoto"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/hospital"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doctorName"
                android:layout_toRightOf="@+id/doctorPhoto"
                android:layout_alignParentTop="true"
                android:textSize="17sp"
                android:text="test"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doctorAddress"
                android:layout_toRightOf="@+id/doctorPhoto"
                android:layout_below="@+id/doctorName"
                android:textSize="14sp"
                android:text="test"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doctorLocation"
                android:layout_toRightOf="@+id/doctorPhoto"
                android:layout_below="@+id/doctorAddress"
                android:textSize="14sp"
                android:text="test"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/doctorLanguage1"
                android:layout_below="@+id/doctorName"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="9dp"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/doctorLanguage2"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/doctorName"
                android:layout_toLeftOf="@id/doctorLanguage1"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/doctorLanguage3"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/doctorName"
                android:layout_toLeftOf="@id/doctorLanguage2"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>